@model List<Blog>
@{
  int counter = 1;
}
<table class="table">
    <thead>
        <tr>  <a asp-action="Create">Create</a>  </tr>
        <tr>
            <th scope="col">#</th>
            <th scope="col">ID</th>
            <th scope="col">TITLE</th>
            <th scope="col">DESCRIPTION</th>
            <th scope="col">REDIRECTURL</th>
            <th scope="col">IMAGE</th>
            <th scope="col">ACTIONS</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <th scope="row">@(counter++)</th>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.RedirectUrl</td>
            <td><img src="~/uploads/blogs/@item.ImageUrl" alt="Alternate Text" /></td>
            <td> <a asp-action="Update" asp-route-id="id" >Update</a> </td>
            <td> <a asp-action="Delete" asp-route-id="id" >Delete</a> </td>
        </tr>
        }
    </tbody>
</table>